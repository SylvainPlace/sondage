# Copiez ce fichier en .env.local et remplissez les valeurs
# Ces variables sont nécessaires pour que l'API fonctionne en local

# Mot de passe global pour accéder au site (ex: "Alumni2025")
GLOBAL_PASSWORD=""

# Clé secrète pour signer les tokens JWT (mettez une longue chaîne aléatoire)
JWT_SECRET=""

# Configuration Google Cloud Platform (Service Account)
# Email du service account (ex: "my-service-account@project.iam.gserviceaccount.com")
GCP_SERVICE_ACCOUNT_EMAIL=""

# Clé privée du service account (Commence par -----BEGIN PRIVATE KEY-----)
# En local, mettez la clé sur une seule ligne avec des \n pour les sauts de ligne si nécessaire, 
# ou assurez-vous que Next.js la lit correctement.
GCP_PRIVATE_KEY="""

# ID du Google Sheet (trouvable dans l'URL du sheet: docs.google.com/spreadsheets/d/ID_ICI/edit)
SPREADSHEET_ID=""
